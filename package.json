{
  "name": "template-graphql",
  "version": "1.0.0",
  "description": "A GraphQL Template Using Koa and Apollo Server",
  "main": "src/index.ts",
  "author": "LFSCamargo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "clear": "rimraf build/",
    "dev": "yarn clear && webpack --config webpack.development.js",
    "build": "yarn clear && webpack --config webpack.production.js",
    "prestart": "yarn build",
    "start": "node build/server.js",
    "eslint:check": "eslint '*/**/*.{js,jsx,ts,tsx}' --fix",
    "lint": "eslint '*/**/*.{js,jsx,ts,tsx}' --fix",
    "typescript:check": "tsc",
    "pretty": "prettier --config ./.prettierrc.js --write \"src/**/*.{js,jsx,ts,tsx,json}\""
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn build",
      "yarn pretty",
      "yarn lint",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "keywords": [
    "apollo-server",
    "apollo",
    "koa",
    "graphql",
    "typescript"
  ],
  "dependencies": {
    "apollo-server-koa": "^3.4.0",
    "bcrypt": "^5.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^10.0.0",
    "graphql": "^15.0.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.8",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.0",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.11.97",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "auto-reload-webpack-plugin": "^1.1.0",
    "eslint": "^8.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-babel-module": "5.1.2",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^25.2.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "eslint-plugin-typescript": "^0.14.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.4",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.9.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^4.4.4",
    "typescript-eslint": "^0.0.1-alpha.0",
    "webpack": "^5.59.1",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^3.0.0"
  }
}
